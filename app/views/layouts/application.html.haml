!!! 5
%html(lang="en")
  %head
    = render :partial => "layouts/head"
  %body
    #wrap
      = render :partial => "layouts/menu"
      .content
        - if !flash[:notice].blank?
          .alert.alert-info
            .container
              = flash[:notice]
        - if !flash[:alert].blank?
          .alert.alert-danger
            .container
              = flash[:alert]
        #loading(style="visibility:hidden")
          .progress
            .progress-bar.progress-bar-striped.active.progress-bar-info(role="progressbar" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100" style="width: 100%")
        .container
          = yield
    = render :partial => "layouts/footer"
